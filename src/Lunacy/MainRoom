// to do list: clicked() returns true/false but in mousePressed(), the button's clicked() is called multiple times; better to store the result in a variable to avoid repeated calls. update d dynamicly
class MainRoom {
  // Member Variables
  int x, y, w, h;
  ArrayList<Tree> trees = new ArrayList<Tree>();
  PImage ground;

  // Constructor
  MainRoom() {
    x = width/2;
    y = height/2;
    w = 500;
    h = 500;
    treeCount = int(random(8,10));
    ground = loadImage("ground.png");
    for (int i = 0; i < treeCount; i++) {
      trees.add(new Tree());
    }
  }

  // Member Methods
  void display() {
    imageMode(CENTER);
    image(ground, x, y);
    ground.resize(w,h);
  }
}
